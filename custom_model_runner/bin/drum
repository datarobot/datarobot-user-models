#!/usr/bin/env python3
# PYTHON_ARGCOMPLETE_OK

from datarobot_drum.drum.gunicorn.run_gunicorn import main_gunicorn
from datarobot_drum.drum.main import main
from datarobot_drum import RuntimeParameters

if __name__ == "__main__":
    print(RuntimeParameters.has("DRUM_SERVER_TYPE"), str(RuntimeParameters.get("DRUM_SERVER_TYPE")).lower())
    if RuntimeParameters.has("DRUM_SERVER_TYPE") and str(RuntimeParameters.get("DRUM_SERVER_TYPE")).lower() in {"gunicorn"}:
        main_gunicorn()
    else:
        main()
